# Include common makefile
include MakefileCommon

# Add backend  include directory to compiler flags
CXXFLAGS		+=-I$(GENN_DIR)/include/code_generator/single_threaded_cpu_backend

# Add prefix to object directory and library name
BACKEND			:=$(GENN_DIR)/lib/libsingle_threaded_cpu_backend$(GENN_PREFIX).a

# Find source files
SOURCES			:= $(wildcard src/code_generator/single_threaded_cpu_backend/*.cc)

# Remove src prefix and replace with object directory
OBJECTS			:=$(SOURCES:src/%.cc=$(OBJECT_DIRECTORY)/%.o)
DEPS			:=$(OBJECTS:.o=.d)

.PHONY: all

all: $(BACKEND)

$(BACKEND): $(OBJECTS)
	mkdir -p $(@D)
	$(AR) $(ARFLAGS) $@ $(OBJECTS)

-include $(DEPS)

$(OBJECT_DIRECTORY)/%.o: src/%.cc $(OBJECT_DIRECTORY)/%.d
	mkdir -p $(@D)
	$(CXX) $(CXXFLAGS) -c -o $@ $<

%.d: ;
