# Configure for CUDA backend
BACKEND_NAME		:=cuda
BACKEND_NAMESPACE 	:=CUDA

# If CUDA path isn't set, default to standard path for (at least Ubuntu) Linux systems
# **NOTE** setting CUDA_PATH is a REQUIRED post-installation action when installing CUDA so this shouldn't be required
CUDA_PATH		?=/usr/local/cuda

# Include common makefile
include MakefileCommon

# Add include and link flags for CUDA
CXXFLAGS		+= -I"$(CUDA_PATH)/include"
ifeq ($(DARWIN),DARWIN)
    LDFLAGS		+=-rpath $(CUDA_PATH)/lib -L"$(CUDA_PATH)/lib" -lcuda -lcudart
else
    ifeq ($(OS_SIZE),32)
        LDFLAGS		+=-L"$(CUDA_PATH)/lib" -lcuda -lcudart
    else
        LDFLAGS		+=-L"$(CUDA_PATH)/lib64" -lcuda -lcudart
    endif
endif

