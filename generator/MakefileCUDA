# Configure for single-threaded CPU backend
BACKEND_NAME		:=cuda
BACKEND_NAMESPACE 	:=CUDA

# Include common makefile
include MakefileCommon

# Add include and link flags for CUDA
CXXFLAGS		+= -I"$(CUDA_PATH)/include"
ifeq ($(DARWIN),DARWIN)
    LDFLAGS		+=-rpath $(CUDA_PATH)/lib -L"$(CUDA_PATH)/lib" -lcuda -lcudart
else
    ifeq ($(OS_SIZE),32)
        LDFLAGS		+=-L"$(CUDA_PATH)/lib" -lcuda -lcudart
    else
        LDFLAGS		+=-L"$(CUDA_PATH)/lib64" -lcuda -lcudart
    endif
endif

